<style>
.custom-banner {
  position: relative;
  width: 100%;
  height: 878px;
  background: url({{ section.settings.background_image | image_url }}) center/cover no-repeat;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding-left: 120px;
  text-align: left;
}

.banner-content {
  max-width: 500px;
}

.banner-content h1 {
  font-size: 48px;
  color: #1a1a1a;
  margin-bottom: 20px;
}

.banner-content p {
  font-size: 16px;
  color: #555;
  margin-bottom: 25px;
}

.banner-btn {
  padding: 12px 30px;
  background: #1a1a1a;
  color: white;
  text-decoration: none;
  display: inline-block;
}

/* Mobile */
@media (max-width: 768px) {
  .custom-banner {
    height: 500px;
    padding-left: 30px;
  }

  .banner-content h1 {
    font-size: 28px;
  }
}
</style>