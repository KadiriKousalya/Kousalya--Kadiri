{{ 'banner.css' | asset_url | stylesheet_tag }}

<section 
  class="custom-banner"
  {% if section.settings.background_image %}
    style="background-image: url('{{ section.settings.background_image | image_url }}');"
  {% endif %}
>

  <!-- Top Bar -->
  <div class="custom-banner__top">
    
    <div class="custom-banner__logo">
      {{ section.settings.logo_text }}
    </div>

    <div class="custom-banner__announcement">
      {{ section.settings.announcement_text }}
    </div>

    <a href="{{ section.settings.top_button_link }}" 
       class="custom-banner__top-btn">
      {{ section.settings.top_button_text }}
    </a>

  </div>

  <!-- Main Content -->
  <div class="custom-banner__content">

    <h1 class="custom-banner__heading">
      {{ section.settings.heading }}
    </h1>

    <p class="custom-banner__description">
      {{ section.settings.description }}
    </p>

    <a href="{{ section.settings.main_button_link }}" 
       class="custom-banner__main-btn">
      {{ section.settings.main_button_text }}
    </a>

  </div>

</section>


{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "TISSO VISION"
    },
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Top Announcement Text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "top_button_text",
      "label": "Top Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "top_button_link",
      "label": "Top Button Link"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination."
    },
    {
      "type": "text",
      "id": "main_button_text",
      "label": "Main Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "main_button_link",
      "label": "Main Button Link"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}