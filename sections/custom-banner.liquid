<section style="background:#fafafa;overflow:hidden;">
  <style>
    html,
    body {
      overflow-x: auto;
      overflow-y: auto;
    }

    .banner-nav {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 1440px;
      height: 64px;
      gap: 340px;
      padding: 0;
      max-width: 100vw;
      margin: 0 auto;
    }

    .banner-logo {
      width: 157.44px;
      height: 19px;
      font-family: 'Jost', sans-serif;
      font-weight: 700;
      font-size: 23px;
      color: #000;
      display: flex;
      align-items: center;
    }

    .nav-middle-text {
      width: 260px;
      height: 14px;
      font-family: 'Jost', sans-serif;
      font-weight: 400;
      font-size: 14px;
      text-align: center;
      color: #000;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .hamburger-menu {
      display: none;
      flex-direction: column;
      background: none;
      border: none;
      cursor: pointer;
      gap: 4px;
      padding: 0;
    }

    .hamburger-menu span {
      width: 24px;
      height: 2px;
      background: #222;
      display: block;
    }

    .nav-button {
      width: 207px;
      height: 44px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-family: 'Jost', sans-serif;
      font-weight: 500;
      font-size: 15px;
      background: #fff544;
      color: #222;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      position: relative;
      overflow: hidden;
      z-index: 1;
      transition: color 0.3s;
    }

    .nav-button::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      width: 0%;
      height: 100%;
      background: #000;
      z-index: 0;
      transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .nav-button:hover::before {
      width: 100%;
    }

    .nav-button span {
      font-weight: 700;
      position: relative;
      z-index: 1;
      transition: color 0.3s;
    }

    .nav-button:hover,
    .nav-button:hover span {
      color: #fff !important;
    }

    .banner-content {
      width: 1440px;
      height: 780px;
      position: relative;
      margin: 0 auto;
      top: -5px;
    }

    .banner-image-1 {
      width: 1440px;
      height: 390px;
      overflow: hidden;
      margin: 0 auto;
      padding: 0;
    }

    .banner-image-2 {
      position: absolute;
      width: 890px;
      height: 200px;
      top: 534px;
      left: 536px;
    }

    .banner-title {
      position: absolute;
      width: 459px;
      height: 70px;
      top: 430px;
      left: 67px;
      background: #fff;
      z-index: 2;
    }

    .banner-title-text {
      font-family: 'Jost', sans-serif;
      font-size: 70px;
      font-weight: 500;
      color: #222;
      height: 70px;
      display: flex;
      align-items: center;
    }

    .banner-desc {
      position: absolute;
      width: 430px;
      height: 84px;
      top: 530px;
      left: 67px;
      font-family: 'Jost', sans-serif;
      font-weight: 400;
      font-size: 17px;
      line-height: 140%;
      color: #222;
      display: flex;
      align-items: center;
      z-index: 2;
      background: #fff;
    }

    @media (max-width: 768px) {
      .banner-nav {
        width: 100%;
        height: auto;
        padding: 12px 16px;
        gap: 0;
        justify-content: space-between;
      }

      .banner-logo {
        font-size: 16px;
        width: auto;
      }

      .nav-middle-text {
        display: none;
      }

      .hamburger-menu {
        display: flex;
      }

      .nav-button {
        width: 100px;
        height: 36px;
        font-size: 12px;
      }

      .banner-content {
        width: 100%;
        height: auto;
        padding: 0;
      }

      .banner-image-1,
      .banner-image-2 {
        width: 100%;
        height: 200px;
        position: static;
        top: auto;
        left: auto;
      }

      .banner-title,
      .banner-desc {
        position: static;
        width: 100%;
        height: auto;
        background: transparent;
        padding: 20px 16px;
        text-align: center;
      }

      .banner-title-text {
        font-size: 32px;
        height: auto;
        justify-content: center;
      }

      .banner-desc {
        font-size: 13px;
        line-height: 1.4;
      }
    }

    @media (max-width: 480px) {
      .banner-nav {
        padding: 10px 12px;
      }

      .banner-logo {
        font-size: 14px;
      }

      .nav-button {
        width: 70px;
        height: 32px;
        font-size: 11px;
      }

      .banner-title-text {
        font-size: 24px;
      }

      .banner-desc {
        font-size: 12px;
        padding: 16px 12px;
      }
    }
  </style>

  <nav class="banner-nav">
    <div class="banner-logo">TISSO VISION</div>
    <div class="nav-middle-text">Find the ideal gift for your loved ones</div>
    <button class="hamburger-menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
    <button class="nav-button">
      <span>CHOOSE GIFT â†’</span>
    </button>
  </nav>

  <section class="banner-content">
    <section class="banner-image-1">
      {% render 'banner-design' %}
    </section>

    <section class="banner-image-2">
      {% render 'banner-design' %}
    </section>

    <div class="banner-title">
      <div class="banner-title-text">
        {{ section.settings.gift_guide_title | default: 'The Gift Guide' }}
      </div>
    </div>

    <div class="banner-desc">
      {{
        section.settings.gift_guide_desc
        | default: 'Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.'
      }}
    </div>
  </section>
</section>
{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "text",
      "id": "gift_guide_title",
      "label": "Gift Guide Title",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "gift_guide_desc",
      "label": "Gift Guide Description",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "gift_guide_button",
      "label": "Gift Guide Button Text",
      "default": "SHOP NOW"
    }
  ]
}
{% endschema %}
