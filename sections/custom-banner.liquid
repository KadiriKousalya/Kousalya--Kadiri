{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Discover Your Ultimate Holiday Gift Destination"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Sub Text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Choose Gift"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}

<style>
.custom-banner {
  position: relative;
  width: 100%;
  height: 500px;
  background-image: url({{ section.settings.bg_image | image_url: width: 2000 }});
  background-size: cover;
  background-position: center;
  display: flex;
  align-items: center;
  padding: 40px;
  color: #000;
}

.custom-banner-content {
  max-width: 500px;
}

.custom-banner h1 {
  font-size: 36px;
  margin-bottom: 15px;
}

.custom-banner p {
  font-size: 18px;
  margin-bottom: 20px;
}

.custom-banner a {
  display: inline-block;
  padding: 12px 25px;
  background-color: black;
  color: white;
  text-decoration: none;
  border-radius: 4px;
}
</style>

<div class="custom-banner">
  <div class="custom-banner-content">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subtext }}</p>

    {% if section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>