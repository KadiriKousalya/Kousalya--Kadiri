{% schema %}
{
  "name": "Gift Guide Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "TISSO VISION"
    },
    {
      "type": "text",
      "id": "top_text",
      "label": "Top Center Text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP NOW"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Hero"
    }
  ]
}
{% endschema %}

<div class="gift-hero" 
     style="background-image: url({{ section.settings.bg_image | image_url: width: 2000 }});">

  <div class="logo">
    {{ section.settings.logo_text }}
  </div>

  <div class="top-text">
    {{ section.settings.top_text }}
  </div>

  <div class="hero-content">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.description }}</p>
    <button class="shop-btn">
      {{ section.settings.button_text }}
    </button>
  </div>

</div>

<style>
.gift-hero {
  width: 100%;
  height: 878px;
  background-size: cover;
  background-position: center;
  position: relative;
  color: black;
}

.logo {
  position: absolute;
  top: 40px;
  left: 60px;
  font-weight: bold;
}

.top-text {
  position: absolute;
  top: 40px;
  left: 50%;
  transform: translateX(-50%);
}

.hero-content {
  position: absolute;
  left: 60px;
  top: 300px;
  max-width: 500px;
}

.hero-content h1 {
  font-size: 60px;
  margin-bottom: 20px;
}

.shop-btn {
  background: black;
  color: white;
  padding: 12px 30px;
  border: none;
}
</style>