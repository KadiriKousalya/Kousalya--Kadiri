<section class="custom-banner">
  <div class="banner-container">
    
    <div class="banner-text">
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subheading }}</p>
      <a href="{{ section.settings.button_link }}" class="banner-btn">
        {{ section.settings.button_text }}
      </a>
    </div>

  </div>
</section>

<style>
.custom-banner {
  width: 100%;
  height: 100vh;
  background: url({{ section.settings.background_image | image_url }}) no-repeat center right;
  background-size: contain;
  background-color: #f8f8f8;
  display: flex;
  align-items: center;
}

.banner-container {
  width: 1200px;
  margin: auto;
  padding-left: 80px;
}

.banner-text {
  max-width: 450px;
}

.banner-text h1 {
  font-size: 60px;
  font-weight: 600;
  margin-bottom: 20px;
}

.banner-text p {
  font-size: 16px;
  color: #666;
  margin-bottom: 30px;
}

.banner-btn {
  display: inline-block;
  padding: 12px 30px;
  background: #f4c542;
  color: black;
  text-decoration: none;
  font-weight: 600;
}

.banner-btn:hover {
  background: black;
  color: white;
}

/* Mobile */
@media (max-width: 768px) {
  .custom-banner {
    background-position: center top;
    background-size: cover;
    text-align: center;
    padding: 40px 20px;
  }

  .banner-container {
    padding-left: 0;
  }

  .banner-text h1 {
    font-size: 32px;
  }
}
</style>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover joy, your ultimate holiday gift destination."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}