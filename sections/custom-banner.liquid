<section class="custom-banner">
  <div class="banner-wrapper">

    <div class="banner-left">
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subheading }}</p>
      <a href="{{ section.settings.button_link }}" class="banner-btn">
        {{ section.settings.button_text }}
      </a>
    </div>

    <div class="banner-right">
      {% if section.settings.background_image %}
        <img src="{{ section.settings.background_image | image_url }}" alt="Banner Image">
      {% endif %}
    </div>

  </div>
</section>

<style>
.custom-banner {
  width: 100%;
  padding: 60px 5%;
}

.banner-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 40px;
}

.banner-left {
  width: 40%;
}

.banner-left h1 {
  font-size: 48px;
  margin-bottom: 20px;
}

.banner-left p {
  font-size: 16px;
  margin-bottom: 30px;
  color: #555;
}

.banner-btn {
  display: inline-block;
  padding: 12px 25px;
  background: #f4c542;
  color: black;
  text-decoration: none;
  font-weight: 600;
}

.banner-right {
  width: 60%;
}

.banner-right img {
  width: 100%;
  height: auto;
}

/* Mobile */
@media (max-width: 768px) {
  .banner-wrapper {
    flex-direction: column;
  }

  .banner-left,
  .banner-right {
    width: 100%;
  }

  .banner-left h1 {
    font-size: 32px;
  }
}
</style>





{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover joy, your ultimate holiday gift destination."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}